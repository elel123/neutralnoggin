<html>
<!-- File for home page -->

<head>
	<title>Neutral Noggin - Home</title>

	<meta charset="utf-8">
	<!-- Set size of screen to fit device-->
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Link css files -->
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css"rel="stylesheet">
	<link href="css/neutral-noggin.css" rel="stylesheet">

	<!-- Link google fonts -->
	<link href="https://fonts.googleapis.com/css?family=Cabin|Montserrat|Roboto+Slab&display=swap" rel="stylesheet">


	<!-- Link scripts -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/neutral-noggin.js"></script>

	<!-- Script for linking tooltaskbars html-->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script>
		$(document).ready(function(){
			$("#topbanner").load("topbanner.html");
		});
	</script>

	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-159295350-1"></script>
	<script>
	window.dataLayer = window.dataLayer || [];
	function gtag(){dataLayer.push(arguments);}
	gtag('js', new Date());

	gtag('config', 'UA-159295350-1', { 'optimize_id': 'GTM-T88GRXF'});
	</script>

	<!-- Google Analytics -->
	<script>
	(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

	ga('create', 'UA-159295350-1', 'auto');
	ga('send', 'pageview');
	</script>
	<!-- End Google Analytics -->
</head>


<body>
	<div class="tilt" id="{{userTilt}}" name="tilt"></div>
	<div class="userlogin" id="{{loggedInProfile}}" name="userlogin"></div>
	{{#if altView}}
		<div class="version" id="B" name="ver"></div>
	{{else}}
		<div class="version" id="A" name="ver"></div>
	{{/if}}
	

	<div id="topbanner"></div>


	<div class="myTaskbar">
		<div class="taskbarTable">
			<table>
				<tr>
		        	<td>
               			<a id="taskButtonH" class="selected" href="home?ut=0">Daily News</a>
		        	</td>
		        	<td>
		        		<a id="taskButtonS" href="saved?ut=0">Saved</a>
		        	</td>
		        	<td>
		        		<a id="taskButtonM" href="more?ut=0">More</a>
		        	</td>
		      	</tr>
		    </table>
		</div>
	</div>



	<div class="container" id="article-list">

		{{#each articles}}
		<a class="container link index" id="{{tilt}}" href={{URL}} target="_blank">

			<div class="container article-container">

				<div class="container headline-container">
					<h3 class="headline">{{headline}}</h3>
				</div>

				<div class="container image-container">
					<img src={{imageURL}} class="img-responsive">
				</div>

			</div>

		</a>

		<div class="saveArticleButton" id="{{URL}}">
			<button type="button">Save</button>
		</div>

		<div class="container article-break"></div>

		{{/each}}

	</div>
	<hr><hr>


</body>
</html>