<html>
<!-- File for home page -->

<head>
	<title>Neutral Noggin - Login</title>

	<meta charset="utf-8">
	<!-- Set size of screen to fit device-->
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Link css files -->
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css"rel="stylesheet">
	<link href="css/neutral-noggin.css" rel="stylesheet">

	<!-- Link google fonts -->
	<link href="https://fonts.googleapis.com/css?family=Cabin|Montserrat|Roboto+Slab&display=swap" rel="stylesheet">

	<!-- Script for linking tooltaskbars html-->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script>
		$(document).ready(function(){
			$("#topbanner").load("topbanner.html");
		});
	</script>

	<!-- Link scripts -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/neutral-noggin.js"></script>

	{{> facebook}}
	<script src="/js/facebook.js"></script>


	<!-- Google Analytics -->
	<script>
	(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

	ga('create', 'UA-159295350-1', 'auto');
	ga('send', 'pageview');
	</script>
	<!-- End Google Analytics -->
</head>


<body>
	<div id="topbanner"></div>

	<div class="tilt" id="{{userTilt}}" name="tilt"></div>
	<div class="userlogin" id="{{loggedInProfile}}" name="userlogin"></div>

	<div class="myTaskbar">
			<div class="taskbarTable">
				<table>
					<tr>
			        	<td>
			        		<a id="taskButtonH" href="home?ut=0">Daily News</a>
			        	</td>
			        	<td>
			        		<a id="taskButtonS" href="saved?ut=0">Saved</a>
			        	</td>
			        	<td>
			        		<a id="taskButtonM" href="more?ut=0" class="selected">More</a>
			        	</td>
			      	</tr>
			    </table>
			</div>

	</div>



	<div class="sub-banner">
		<h1>Noggin Login</h1>
	</div>

	<div class="container login-fields">

		<form class="search-bar" id="login" role="form" method="get">
			<p class="setting-text">Username</p>
		    <div class="form-group" style="float: right">
		      <input type="text" class="form-control" id="username" placeholder="Username" name="username">
		    </div>

			<div class="container" style="height: 60px"></div>

			<p class="setting-text">Password</p>
		    <div class="form-group" style="float: right">
		      <input class="form-control" id="password" type="password" placeholder="Password" name="password">
		    </div>

			<div class="container" style="height: 50px"></div>

			<div id ="done-button">
				<input type="submit" id="submitBtn" class="btn btn-default" value="Done">
			</div>
			    
		</form>

	</div>


	<hr>




	<div class="container login-buttons" style="margin-top: 130px">

		<div id ="cancel-button">
			<a id="cancelButton" href="more?ut=0">
				<button type="button">Cancel</button>
			</a>
		</div>

<!-- 		<hr> -->
<!-- 		<p>Or login through Facebook!</p>
		<fb:login-button scope="public_profile,email" onlogin="checkLoginState();"></fb:login-button> -->

	</div>



</body>
</html>