</head>

<body>
	<div id="topbanner"></div>

	<div class="tilt" id="{{userTilt}}" name="tilt"></div>
	<div class="userlogin" id="{{loggedInProfile}}" name="userlogin"></div>
	{{#if altView}}
		<div class="version" id="B" name="ver"></div>
	{{else}}
		<div class="version" id="A" name="ver"></div>
	{{/if}}

	<div class="myTaskbar">

			<div class="taskbarTable">
				<table>
					<tr>
			        	<td>
			        		<a id="taskButtonH" href="home?ut=0">Daily News</a>
			        	</td>
			        	<td>
			        		<a id="taskButtonS" href="saved?ut=0">Saved</a>
			        	</td>
			        	<td>
			        		<a id="taskButtonM" href="more?ut=0" class="selected">More</a>
			        	</td>
			      	</tr>
			    </table>
			</div>

	</div>




	<div class="container" id="more-page">

		<h4 class="title">Settings and More</h4>
		<p class="logMsg" id="{{loggedInProfile}}">(logged in as {{loggedInProfile}})</p>

		<div id="login">
			<a id="logoutButton">
				<button class="logoutButton" type="button">Logout</button>
			</a>
		</div>		

		<div class="container article-break"></div>

		<div class="container setting">
			<p class="setting-text">Account</p>

			<div id="login">
				<a id="loginButton" href="login?ut=0">
					<button type="button" >Login</button>
				</a>
			</div>
			<div id="login">
				<a id="registerButton" href="register?ut=0">
					<button type="button" >Create Account</button>
				</a>
			</div>

		</div>


		<div class="container small-break"></div>


		<div class="container setting">
			<p class="setting-text">Your Noggin Scale</p>

			<div id="login">
				<a href="scale?ut=0" id="scaleButtonFromMore">
					<button type="button">View</button>
				</a>
			</div>
		</div>

			{{#if altView}}
			{{> scaleDescription}}
			{{else}}
			{{/if}} 

			{{!-- <p style="font-size: 13px; color: #787878;">Your Noggin Scale tells you about the net biases of the articles that you've read! With this info, you can help yourself be a more aware, open-minded individual.</p> --}}

		<div class="container small-break"></div>



	</div>




</body>
</html>